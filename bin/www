#!/usr/bin/env node

var app = require('../app');
var debug = require('debug')('generadospreguntas:server');

var http = require('http');
var https = require('https');

var fs = require('fs');

var portHttp = normalizePort(process.env.HTTP_PORT || '8080');
var portHttps = normalizePort(process.env.HTTPS_PORT || '3443');
app.set('port', portHttps);

var options = {
  key: fs.readFileSync('./cert/key.pem'),
  cert: fs.readFileSync('./cert/cert.pem'),

  // clave para que Express siga funcionando
  allowHTTP1: true
};

var httpsServer = https.createServer(options, app);



var httpServer = http.createServer(function(req, res) {
  res.writeHead(301, { 'Location': 'https://localhost:' + portHttps + req.url });
  res.end();
});

httpsServer.listen(portHttps);
httpServer.listen(portHttp);

httpsServer.on('error', onError);
httpServer.on('error', onError);

httpsServer.on('listening', function() {
  var addr = httpsServer.address();
  var bind = typeof addr === 'string' ? 'pipe ' + addr : 'port ' + addr.port;
  debug('Listening on ' + bind);
  console.log(' HTTPS servidor escuchando');
});

httpServer.on('listening', function() {
  console.log('ðŸ“¡ HTTP redireccionando a https');
});

function normalizePort(val) {
  var port = parseInt(val, 10);
  if (isNaN(port)) return val;
  if (port >= 0) return port;
  return false;
}

function onError(error) {
  if (error.syscall !== 'listen') throw error;
  var bind = typeof port === 'string' ? 'Pipe ' + port : 'Port ' + port;
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' se requiere mas privilegios');
      process.exit(1);
    case 'EADDRINUSE':
      console.error(bind + ' listo para usar');
      process.exit(1);
    default:
      throw error;
  }
}